<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_name_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:drawableBottom="@android:color/holo_blue_dark"
    tools:context="com.example.bhash.govermentinfo.NameCard"
    android:background="@android:color/holo_green_dark"
    android:elevation="9dp">

    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.52"
        android:id="@+id/cardView">

        <android.support.constraint.ConstraintLayout
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent"
                android:hint="Name"
                android:textStyle="normal|bold"
                tools:ignore="HardcodedText"
                android:textAlignment="center"
                app:layout_constraintLeft_toLeftOf="@+id/imageView3"
                android:layout_marginStart="60dp" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/position"
                tools:ignore="HardcodedText"
                android:hint="Position"
                android:textStyle="normal|bold"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" />

            <ImageView
                android:layout_width="wrap_content"
                app:srcCompat="@drawable/separator"
                android:id="@+id/imageView3"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name"
                tools:ignore="HardcodedText,MissingConstraints"
                android:contentDescription="Separator" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
